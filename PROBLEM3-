#include <iostream>
#include <cmath>
#include <iomanip>
#include <conio.h>

using namespace std;

int main()
{
  int x, y;
  float V;
  const float z = 2.5;
  
  cout << "Enter the value of x:";
  cin >> x;
  
  cout << "\n";
  
  cout << "Enter the value of y:";
  cin >> y;
  
  cout << "\n";
  
  if (x == 1 && 1 < y < 5)
    {
      V = x * y * z;
      cout << "This is the value of V:" << fixed << setprecision(2) << V;
    }

  else if (x == 1 && y >= 5)
    {
      V = x + (y / z);
      cout << "This is the value of V:" << fixed << setprecision(2) << V;
    }
    
  else if (x == 2 && y <= 5)
    {
      V = abs((x-y)/z);
      cout << "This is the value of V:" << fixed << setprecision(2) << V;
    }
    
  else if (x == 2 && y > 5)
    {
      V = x - (sqrt(y + z));
      cout << "This is the value of V:" << fixed << setprecision(2) << V;
    }
    
  else
    {
      V = x + y + z;
      cout << "This is the value of V:" << fixed << setprecision(2) << V;
    }

_getch ();
return 0;
}
